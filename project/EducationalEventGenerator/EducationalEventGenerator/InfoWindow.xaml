<Window x:Class="EducationalEventGenerator.InfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Об игре" 
        Height="450" 
        Width="600"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterOwner">

    <Grid>
        <!-- Затемненный фон -->
        <Rectangle Fill="#A0000000" MouseDown="CloseButton_Click"/>

        <!-- Основное окно -->
        <Border Width="600" 
                Height="400"
                Background="White" 
                CornerRadius="10"
                BorderBrush="#FFCCCCCC"
                BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Заголовок -->
                <Border Background="#FF0078D7" 
                        CornerRadius="10,10,0,0"
                        Padding="20,15">
                    <Grid>
                        <TextBlock Text="Об игре" 
                                 Foreground="White"
                                 FontSize="20" 
                                 FontWeight="Bold"/>
                        <Button Content="×" 
                                Click="CloseButton_Click"
                                HorizontalAlignment="Right"
                                Background="Transparent"
                                Foreground="White"
                                FontSize="24"
                                Width="40" 
                                Height="40"
                                BorderThickness="0"/>
                    </Grid>
                </Border>

                <!-- Контент -->
                <ScrollViewer Grid.Row="1" 
                             Margin="20">
                    <StackPanel>
                        <TextBlock Text="Life Skills Simulator"
                                 FontSize="24" 
                                 FontWeight="Bold"
                                 Margin="0,0,0,15"/>

                        <TextBlock TextWrapping="Wrap" 
                                 LineHeight="24"
                                 FontSize="14">
                            <Run Text="Версия: 1.0"/>
                            <LineBreak/>
                            <LineBreak/>
                            <Run Text="Life Skills Simulator - это игра о развитии жизненных навыков и принятии решений. В игре вы развиваете различные характеристики:"/>
                            <LineBreak/>
                            <LineBreak/>
                            <Run Text="• Знания - определяют ваш опыт и компетентность"/>
                            <LineBreak/>
                            <Run Text="• Осознанность - помогает принимать взвешенные решения"/>
                            <LineBreak/>
                            <Run Text="• Мотивация - определяет вашу энергию и стремление"/>
                            <LineBreak/>
                            <Run Text="• Устойчивость - снижает негативные эффекты (доступно с 6 уровня)"/>
                            <LineBreak/>
                            <Run Text="• Креативность - открывает новые возможности (доступно с 7 уровня)"/>
                            <LineBreak/>
                            <LineBreak/>
                            <Run Text="Разработчик: vasylk21"/>
                            <LineBreak/>
                            <Run Text="Дата создания: 2025-06-02"/>
                        </TextBlock>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</Window>