<Window x:Class="EducationalEventGenerator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Life Skills Simulator" 
        Height="750" Width="1200"
        WindowStartupLocation="CenterScreen"
        FontFamily="Segoe UI"
        Background="#FFF5F5F5">

    <Window.Resources>
        <ToolTip x:Key="ResilienceTooltip">
            <TextBlock>
            Устойчивость снижает получаемый урон.<LineBreak/>
            Каждые 10 единиц устойчивости снижают урон на 5%.<LineBreak/>
            Появляется на 6 уровне и растёт при получении урона и повышении уровня.
            </TextBlock>
        </ToolTip>

        <ToolTip x:Key="KnowledgeTooltip">
            <TextBlock>
            Знания определяют ваш опыт и компетентность.<LineBreak/>
            Влияют на доступность некоторых решений.
            </TextBlock>
        </ToolTip>

        <ToolTip x:Key="AwarenessTooltip">
            <TextBlock>
            Осознанность помогает принимать взвешенные решения.<LineBreak/>
            Повышает эффективность действий.
            </TextBlock>
        </ToolTip>

        <ToolTip x:Key="MotivationTooltip">
            <TextBlock>
            Мотивация определяет вашу энергию и стремление.<LineBreak/>
            Влияет на успешность сложных действий.
            </TextBlock>
        </ToolTip>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#FFE0E0E0"/>
            <Setter Property="Foreground" Value="#FF333333"/>
            <Setter Property="BorderBrush" Value="#FF0078D7"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FFE5F1FB"/>
                                <Setter Property="BorderBrush" Value="#FF0078D7"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FFCCE4F7"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#FFF0F0F0"/>
                                <Setter Property="Foreground" Value="#FFA0A0A0"/>
                                <Setter Property="BorderBrush" Value="#FFC0C0C0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="ProgressBar">
            <Setter Property="Height" Value="16"/>
            <Setter Property="Foreground" Value="#FF0078D7"/>
            <Setter Property="Background" Value="#FFE0E0E0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ProgressBar">
                        <Border x:Name="PART_Track" 
                                Background="{TemplateBinding Background}"
                                CornerRadius="4">
                            <Grid x:Name="PART_Indicator" 
                                  HorizontalAlignment="Left">
                                <Rectangle x:Name="Indicator"
                                           Fill="{TemplateBinding Foreground}"
                                           RadiusX="4" RadiusY="4"/>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="HeaderText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FF0078D7"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <DataTemplate x:Key="SkillTemplate">
            <Border Background="#FFF0F0F0" BorderBrush="#FF0078D7" BorderThickness="1" 
            CornerRadius="4" Padding="10" Margin="6" Width="200" Height="150">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="{Binding Name}" FontWeight="Bold" 
                      Foreground="#FF333333" FontSize="14" 
                      TextWrapping="Wrap"/>

                    <TextBlock Grid.Row="1" Text="{Binding Description}" 
                      Foreground="#FF666666" FontSize="12" 
                      TextWrapping="Wrap" Margin="0,4"/>

                    <TextBlock Grid.Row="2" Text="{Binding RequirementsText}"
          Foreground="#FF999999" FontSize="11"
          TextWrapping="Wrap"/>

                    <CheckBox Grid.Row="3" 
          IsChecked="{Binding IsAcquired}" 
          IsEnabled="{Binding CanAcquire}"
          Content="Изучить" 
          Foreground="#FF333333"
          HorizontalAlignment="Center" 
          Margin="0,8,0,0"
          Checked="SkillCheckBox_Changed"/>
                </Grid>
            </Border>
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#FF0078D7" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="LIFE SKILLS SIMULATOR" 
                              FontSize="24" FontWeight="Bold"
                              Foreground="White"/>

                    <TextBlock Text="{Binding PlayerStats.Level, StringFormat='Уровень: {0}'}"
                              Foreground="White" Margin="20,0,0,0"
                              FontSize="18" VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="320"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Background="White" CornerRadius="6"
                    BorderBrush="#FFCCCCCC" BorderThickness="1" Padding="20">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock x:Name="EventCategory" 
                                  Style="{StaticResource HeaderText}"/>
                        <!-- Добавьте после TextBlock EventCategory -->
                        <Grid x:Name="TimerPanel" Visibility="Collapsed" Margin="0,5,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <ProgressBar x:Name="TimeProgressBar" 
                 Height="20" 
                 Background="#FFE0E0E0"
                 Foreground="#FF0078D7"
                 BorderThickness="0">
                                <ProgressBar.Template>
                                    <ControlTemplate TargetType="ProgressBar">
                                        <Border x:Name="PART_Track" 
                        Background="{TemplateBinding Background}"
                        BorderThickness="0"
                        CornerRadius="4">
                                            <Border x:Name="PART_Indicator" 
                            Background="{TemplateBinding Foreground}"
                            BorderThickness="0"
                            CornerRadius="4"
                            HorizontalAlignment="Left"/>
                                        </Border>
                                    </ControlTemplate>
                                </ProgressBar.Template>
                            </ProgressBar>

                            <TextBlock x:Name="TimerText" 
               Grid.Column="1"
               Margin="10,0,0,0"
               FontSize="16"
               FontWeight="SemiBold"
               VerticalAlignment="Center"/>
                        </Grid>

                        <TextBlock x:Name="EventText" TextWrapping="Wrap" 
                                  FontSize="16" Foreground="#FF333333" Margin="0,0,0,20"
                                  LineHeight="24"/>

                        <StackPanel x:Name="OptionsPanel" Margin="0,10,0,25"/>

                        <Border x:Name="ExplanationBox" Visibility="Collapsed"
                                Background="#FFF5F5F5" BorderBrush="#FF0078D7"
                                BorderThickness="1" CornerRadius="6" Padding="15">
                            <StackPanel>
                                <TextBlock Text="Объяснение:" FontWeight="Bold"
                                           Foreground="#FF0078D7" Margin="0,0,0,5"/>
                                <TextBlock x:Name="ExplanationText" TextWrapping="Wrap"
                                         Foreground="#FF555555" FontSize="14"/>
                                <TextBlock x:Name="TemporaryEffectsText" TextWrapping="Wrap"
                                         Foreground="#FF777777" Margin="0,10,0,0" FontSize="13"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <Border Grid.Column="1" Margin="10,0,0,0" Background="White" 
                    CornerRadius="6" BorderBrush="#FFCCCCCC" BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="15">
                            <TextBlock Text="ХАРАКТЕРИСТИКИ" Style="{StaticResource HeaderText}" FontSize="24"/>

                            <StackPanel Margin="0,0,0,20">
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                    <TextBlock Text="Знания:" 
          Foreground="#FF333333" 
          FontWeight="SemiBold" 
          FontSize="18"
          ToolTip="{StaticResource KnowledgeTooltip}"/>
                                    <TextBlock x:Name="KnowledgeText" Foreground="#FF2E7D32" 
                      HorizontalAlignment="Right" Margin="5,0,0,0"/>
                                    <TextBlock x:Name="KnowledgeChangeText" Foreground="#FF2E7D32" 
                      Margin="5,0,0,0" FontSize="14"/>
                                </StackPanel>
                                <ProgressBar x:Name="KnowledgeProgress" Foreground="#FF4CAF50" Height="22"/>
                            </StackPanel>

                            <StackPanel Margin="0,0,0,20">
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                    <TextBlock Text="Осознанность:" 
          Foreground="#FF333333" 
          FontWeight="SemiBold" 
          FontSize="18"
          ToolTip="{StaticResource AwarenessTooltip}"/>
                                    <TextBlock x:Name="AwarenessText" Foreground="#FF1565C0" 
                      HorizontalAlignment="Right" Margin="5,0,0,0"/>
                                    <TextBlock x:Name="AwarenessChangeText" Foreground="#FF1565C0" 
                      Margin="5,0,0,0" FontSize="14"/>
                                </StackPanel>
                                <ProgressBar x:Name="AwarenessProgress" Foreground="#FF2196F3" Height="22"/>
                            </StackPanel>

                            <StackPanel Margin="0,0,0,20">
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                    <TextBlock Text="Мотивация:" 
          Foreground="#FF333333" 
          FontWeight="SemiBold" 
          FontSize="18"
          ToolTip="{StaticResource MotivationTooltip}"/>
                                    <TextBlock x:Name="MotivationText" Foreground="#FF6A1B9A" 
                      HorizontalAlignment="Right" Margin="5,0,0,0"/>
                                    <TextBlock x:Name="MotivationChangeText" Foreground="#FF6A1B9A" 
                      Margin="5,0,0,0" FontSize="14"/>
                                </StackPanel>
                                <ProgressBar x:Name="MotivationProgress" Foreground="#FF9C27B0" Height="23" 
                     ValueChanged="MotivationProgress_ValueChanged"/>
                            </StackPanel>

                            <StackPanel x:Name="AdvancedStatsPanel" Visibility="Collapsed" Margin="0,0,0,20">
                                <!-- Существующая панель устойчивости -->
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                    <TextBlock Text="Устойчивость:" 
                  Foreground="#FF333333" 
                  FontWeight="SemiBold"
                  ToolTip="{StaticResource ResilienceTooltip}"/>
                                    <TextBlock x:Name="ResilienceText" 
                  Foreground="#FF37474F" 
                  HorizontalAlignment="Right" 
                  Margin="5,0,0,0"/>
                                    <TextBlock x:Name="ResilienceChangeText" 
                  Foreground="#FF37474F" 
                  Margin="5,0,0,0" 
                  FontSize="14"/>
                                </StackPanel>
                                <ProgressBar x:Name="ResilienceProgress" 
                 Foreground="#FF607D8B"/>

                                <!-- Добавьте панель креативности -->
                                <StackPanel Orientation="Horizontal" Margin="0,10,0,5">
                                    <TextBlock Text="Креативность:" 
                  Foreground="#FF333333" 
                  FontWeight="SemiBold"/>
                                    <TextBlock x:Name="CreativityText" 
                  Foreground="#FF37474F" 
                  HorizontalAlignment="Right" 
                  Margin="5,0,0,0"/>
                                    <TextBlock x:Name="CreativityChangeText" 
                  Foreground="#FF37474F" 
                  Margin="5,0,0,0" 
                  FontSize="14"/>
                                </StackPanel>
                                <ProgressBar x:Name="CreativityProgress" 
                 Foreground="#FF607D8B"/>
                            </StackPanel>
                            <!-- Добавьте эту секцию прогресса уровня перед закрывающим тегом StackPanel в секции характеристик -->
                            <StackPanel Margin="0,25,0,15">
                                <TextBlock Text="Прогресс уровня:" 
              Foreground="#FF333333" 
              FontWeight="SemiBold" 
              Margin="0,0,0,5" 
              FontSize="18"/>
                                <ProgressBar x:Name="LevelProgress" 
                 Foreground="#FFFB8C00" 
                 Height="23"/>
                                <TextBlock x:Name="LevelText" 
              FontSize="14"
              Foreground="#FFFB8C00" 
              HorizontalAlignment="Center"
              Margin="0,5,0,0"/>
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>

                    <Border Grid.Row="1" Background="#FFF5F5F5" BorderBrush="#FFCCCCCC" 
                            BorderThickness="0,1,0,0" Padding="10">
                        <TextBlock Text="АКТИВНЫЕ ЭФФЕКТЫ" FontWeight="Bold" 
                                  Foreground="#FF0078D7" Margin="0,0,0,5" FontSize="18"/>
                    </Border>

                    <ItemsControl x:Name="ActiveEffectsDisplay" Grid.Row="1" 
                                 Background="#FFF5F5F5" Padding="10,0,10,10"
                                 BorderBrush="Transparent" BorderThickness="0"
                                 VerticalAlignment="Bottom" MaxHeight="120">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Margin="2" Padding="5" Background="#FFE0E0E0" CornerRadius="3">
                                    <StackPanel Orientation="Horizontal">
                                        <Ellipse Width="10" Height="10" Fill="{Binding Color}" 
                                                VerticalAlignment="Center" Margin="0,0,5,0"/>
                                        <TextBlock Text="{Binding Description}" Foreground="#FF333333"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Vertical"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>
                </Grid>
            </Border>
        </Grid>

        <Border x:Name="SkillsPanel" Grid.Row="2" Background="White" Padding="10"
                BorderBrush="#FFCCCCCC" BorderThickness="0,1,0,0"
                Visibility="Collapsed">
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                <ItemsControl x:Name="SkillsList" ItemTemplate="{StaticResource SkillTemplate}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal" Margin="10,0"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>
            </ScrollViewer>
        </Border>

        <Border Grid.Row="3" Background="White" Padding="15"
                BorderBrush="#FFCCCCCC" BorderThickness="0,1,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="StartButton" Content="Начать игру" Width="185" 
                        Click="StartButton_Click" FontSize="16" Height="44"/>
                <Button x:Name="NextButton" Content="Следующее событие" Width="180" 
                        Click="NextButton_Click" IsEnabled="False" Margin="15,0" 
                        FontSize="16" Height="44"/>
                <Button x:Name="RestartButton" Content="Начать заново" Width="180" 
                        Click="RestartButton_Click" IsEnabled="False" 
                        FontSize="16" Height="44"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>