<Window x:Class="CatGame.Views.CustomMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Уведомление" 
        Height="200" 
        Width="400"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        Background="#FFFFB1C4"
        ResizeMode="NoResize">
    <Border BorderBrush="#FFE9A5B5" 
            BorderThickness="2" 
            CornerRadius="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="Auto" MinHeight="98"/>
            </Grid.RowDefinitions>

            <TextBlock x:Name="MessageText"
                      Text="Недостаточно монет!"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Top"
                      TextWrapping="Wrap"
                      FontSize="24" Height="24" Width="318" Margin="0,49,0,0"/>

            <Button Grid.Row="1"
                    Content="OK"
                    Width="NaN"
                    Height="NaN"
                    Margin="148,30,148,30"
                    Click="OkButton_Click"
                    Style="{StaticResource MainButtonStyle}">
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="White"/>
                        <GradientStop Color="#FFFFB1C4" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
        </Grid>
    </Border>
</Window>