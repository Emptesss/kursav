<UserControl x:Class="CatGame.Views.ShopView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CatGame.Views"
             xmlns:helpers="clr-namespace:CatGame.Helpers"
             mc:Ignorable="d" 
             d:DesignHeight="1080" d:DesignWidth="1920">

    <Grid Background="#FFF9BFCD">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" MinHeight="146"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Верхняя панель -->
        <Grid Grid.Row="0" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Image Source="/CatGame;component/Views/монета.png" 
                   Width="100" 
                   Height="100"
                   Grid.Column="0"/>

            <TextBlock Text="{Binding Balance, StringFormat='Баланс: {0}'}" 
                       FontSize="24" 
                       Margin="10,0,0,0"
                       VerticalAlignment="Center"
                       Grid.Column="1"/>

            <Button Command="{Binding ReturnCommand}" 
                    Grid.Column="2"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Margin="0,0,20,0"
                    Style="{StaticResource InvisibleButtonStyle}">
                <Image Source="/CatGame;component/Views/кнопкавыход.png"
                       Width="100"
                       Height="100"/>
            </Button>
        </Grid>

        <!-- Основной контент со скинами -->
        <Grid Grid.Row="1" Margin="20">
            <ItemsControl ItemsSource="{Binding Skins}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="20" Width="300">
                            <Image Source="{Binding ImagePath}" 
                                    Width="200" 
                                     Height="200"
                                    Stretch="Uniform"/>

                            <!-- Цена и кнопка покупки -->
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 10">
                                <TextBlock Text="{Binding Price}" FontSize="24" Margin="0 0 10 0"/>
                                <Image Source="/CatGame;component/Views/монета.png" Width="30" Height="30"/>
                            </StackPanel>

                            <!-- Кнопка покупки -->
                            <Button Content="{Binding IsPurchased, Converter={StaticResource BoolToBuyConverter}}" 
        Command="{Binding DataContext.BuyItemCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
        CommandParameter="{Binding}"
        IsEnabled="{Binding IsPurchased, Converter={StaticResource InverseBoolConverter}}"
        Style="{StaticResource MainButtonStyle}"
        Margin="0 10"/>


                            <!-- Кнопка выбора скина -->
                            <Button Command="{Binding DataContext.ToggleSkinCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
        CommandParameter="{Binding}"
        IsEnabled="{Binding IsPurchased}"
        Visibility="{Binding IsPurchased, Converter={StaticResource BoolToVisibility}}"
        Style="{StaticResource MainButtonStyle}"
        Margin="0 10">
                                <Button.Content>
                                    <MultiBinding Converter="{StaticResource SelectedToTextConverter}">
                                        <Binding Path="DataContext.GameData.SelectedSkin" RelativeSource="{RelativeSource AncestorType=UserControl}"/>
                                        <Binding Path="."/>
                                    </MultiBinding>
                                </Button.Content>
                            </Button>

                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Grid>
    </Grid>
</UserControl>