<UserControl x:Class="CatGame.Views.CatProfileView"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
            xmlns:local="clr-namespace:CatGame.Views"
            mc:Ignorable="d" 
            d:DesignHeight="1080" 
            d:DesignWidth="1980">

    <Grid>
        <!-- Размытый фон -->
        <Rectangle Fill="#80000000">
            <Rectangle.Effect>
                <BlurEffect Radius="10"/>
            </Rectangle.Effect>
        </Rectangle>

        <!-- Основное окно анкеты -->
        <Border Background="#FFE9A5B5" 
                CornerRadius="20"
                Width="800" 
                Height="900"
                HorizontalAlignment="Center" 
                VerticalAlignment="Center"
                >

            <Grid Margin="30">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Заголовок -->
                    <RowDefinition Height="Auto"/>
                    <!-- Аватар -->
                    <RowDefinition Height="Auto"/>
                    <!-- Имя -->
                    <RowDefinition Height="Auto"/>
                    <!-- Дата -->
                    <RowDefinition Height="Auto"/>
                    <!-- Кнопка -->
                </Grid.RowDefinitions>

                <!-- Заголовок и кнопка закрытия -->
                <Grid Grid.Row="0" Margin="0,0,0,30">
                    <TextBlock Text="Анкета котика" 
                             FontSize="48" 
                             HorizontalAlignment="Center"
                             Margin="0,10,0,0"/>

                    <Button Command="{Binding CloseCommand}"
                            Style="{StaticResource InvisibleButtonStyle}"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Margin="0,-10,-10,0">
                        <Image Source="/Views/кнопкавыход.png" 
                               Width="80" 
                               Height="80"/>
                    </Button>
                </Grid>

                <!-- Аватар и кнопки переключения -->
                <Grid Grid.Row="1" Margin="0,0,0,40">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="150"/>
                    </Grid.ColumnDefinitions>

                    <Button Command="{Binding PreviousAvatarCommand}"
                            Style="{StaticResource MainButtonStyle}"
                            Width="80"
                            Height="80"
                            VerticalAlignment="Center">
                        <TextBlock Text="←"
                                 FontSize="48"
                                 Foreground="#FF86474F"
                                 HorizontalAlignment="Center"
                                 VerticalAlignment="Center"/>
                    </Button>

                    <Border Grid.Column="1"
        Width="300"
        Height="300"
        CornerRadius="150"
        Background="White"
        
        BorderThickness="4">
                        <Border.Clip>
                            <EllipseGeometry Center="150,150" 
                         RadiusX="200" 
                         RadiusY="200"/>
                        </Border.Clip>
                        <Image Source="{Binding CurrentAvatarImage}"
           Stretch="UniformToFill"
           Width="300"
           Height="300"/>
                    </Border>

                    <Button Grid.Column="2" 
                            Command="{Binding NextAvatarCommand}"
                            Style="{StaticResource MainButtonStyle}"
                            Width="80"
                            Height="80"
                            VerticalAlignment="Center">
                        <TextBlock Text="→"
                                 FontSize="48"
                                 Foreground="#FF86474F"
                                 HorizontalAlignment="Center"
                                 VerticalAlignment="Center"/>
                    </Button>
                </Grid>

                <!-- Имя кота -->
                <StackPanel Grid.Row="2" Margin="0,0,0,40">
                    <TextBlock Text="Дайте имя котику:"
                             FontSize="36"
                             Foreground="#FF86474F"
                             HorizontalAlignment="Center"
                             Margin="0,0,0,20"/>
                    <TextBox Text="{Binding CatName, UpdateSourceTrigger=PropertyChanged}"
                            FontSize="30"
                            Width="400"
                            Height="60"
                            Background="White"
                            BorderBrush="#FF86474F"
                            BorderThickness="3"
                            VerticalContentAlignment="Center"
                            HorizontalContentAlignment="Center"/>
                </StackPanel>

                <!-- Дата рождения -->
                <StackPanel Grid.Row="3" Margin="0,0,0,40">
                    <TextBlock Text="Дата рождения:"
                             FontSize="36"
                             Foreground="#FF86474F"
                             HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding BirthDate, StringFormat=dd.MM.yyyy}"
                             FontSize="30"
                             HorizontalAlignment="Center"
                             Margin="0,20,0,0"/>
                </StackPanel>

                <!-- Кнопка сохранить -->
                <Button Grid.Row="4"
                        Command="{Binding SaveCommand}"
                        Style="{StaticResource MainButtonStyle}"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Bottom"
                        Width="300"
                        Height="80"
                        Margin="0,0,0,20">
                    <TextBlock Text="Сохранить"
                             FontSize="36"
                             Foreground="#FF86474F"
                             HorizontalAlignment="Center"
                             VerticalAlignment="Center"/>
                </Button>
            </Grid>
        </Border>
    </Grid>
</UserControl>