<UserControl x:Class="CatGame.Views.MainGameScreenView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CatGame.Views"
             mc:Ignorable="d"
             d:DesignHeight="1080" 
             d:DesignWidth="1980">
    <UserControl.Background>
        <ImageBrush ImageSource="{Binding SelectedWallpaperPath}" Stretch="UniformToFill"/>
    </UserControl.Background>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="0*"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Top Balance Panel -->
        <Grid Grid.Row="0" Margin="20,20,20,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Image Source="/Views/монета.png" 
                   Width="100" 
                   Height="100"
                   Grid.Column="0"/>

            <TextBlock Text="{Binding Balance, StringFormat='Баланс: {0}'}" 
                       FontSize="24" 
                       Margin="10 0 0 0"
                       VerticalAlignment="Center"
                       Grid.Column="1"/>

            <Button Command="{Binding ExitCommand}" 
                    Grid.Column="2"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Margin="0,0,20,0"
                    Style="{StaticResource InvisibleButtonStyle}">
                <Image Source="/Views/кнопкавыход.png"
                       Width="100"
                       Height="100"/>
            </Button>
        </Grid>

        <!-- Main Content -->
        <Grid Grid.Row="1" Grid.RowSpan="2"/>

        <!-- Bottom Navigation (оставлено без изменений) -->
        <Grid Grid.Row="3" Background="#FFE9A5B5" Height="150">
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"/>
            <Grid Margin="-228,-624,1136,20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <TextBlock Text="Игры"
               FontSize="36"
               HorizontalAlignment="Left"
               Margin="492,715,0,-51"
               Foreground="#FF86474F" Grid.Row="1" RenderTransformOrigin="0.5,0.5">
                    <TextBlock.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform AngleX="-0.089" AngleY="0.436"/>
                            <RotateTransform Angle="-0.85"/>
                            <TranslateTransform X="29" Y="-0.219"/>
                        </TransformGroup>
                    </TextBlock.RenderTransform>
                </TextBlock>
                <Button Grid.Row="1"
            Command="{Binding OpenMiniGamesMenuCommand}" 
            Style="{StaticResource InvisibleButtonStyle}"
            Width="700"
            Height="700">
                    <Image Source="/Views/игры.png" 
               RenderTransformOrigin="0.5,0.5"
               Stretch="Uniform"
               Opacity="1">
                        <Image.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform ScaleX="-1"/>
                                <SkewTransform/>
                                <RotateTransform/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </Image.RenderTransform>
                        <Image.Style>
                            <Style TargetType="Image">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Effect">
                                            <Setter.Value>
                                                <DropShadowEffect BlurRadius="20" 
            Color="White"
            Opacity="0.7"/>
                                            </Setter.Value>
                                        </Setter>
                                        <Setter Property="RenderTransform">
                                            <Setter.Value>
                                                <ScaleTransform ScaleX="2" ScaleY="2"/>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Image.Style>
                    </Image>
                </Button>
            </Grid>
            <Grid Margin="1341,-568,-208,-69">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Магазин"
               Grid.Row="1"
               FontSize="36"
               HorizontalAlignment="Left"
               Margin="247,659,0,145"
               Foreground="#FF86474F" Width="189" RenderTransformOrigin="0.5,0.5">
                    <TextBlock.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform AngleY="0.012"/>
                            <RotateTransform Angle="-0.058"/>
                            <TranslateTransform Y="-0.927" X="-105"/>
                        </TransformGroup>
                    </TextBlock.RenderTransform>
                </TextBlock>

                <Button Grid.Row="1"
        Command="{Binding NavigateToShopCommand}" 
        Style="{StaticResource InvisibleButtonStyle}" 
        Margin="10,10,45,68">
                    <Image Source="{Binding SelectedLockerPath}" 
           Stretch="Uniform"
           RenderTransformOrigin="0.5,0.5">
                        <Image.Style>
                            <Style TargetType="Image">
                                <!-- Базовые настройки -->
                                <Setter Property="Margin" Value="71,60,152,138"/>
                                <Setter Property="Height" Value="558"/>

                                <!-- Триггеры для разных шкафчиков -->
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedLockerName}" Value="Базовый шкафчик">
                                        <Setter Property="Height" Value="400"/>
                                        <Setter Property="Margin" Value="50,250,160,48"/>
                                        <!-- Увеличили отступ сверху -->
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding SelectedLockerName}" Value="Милый шкафчик">
                                        <Setter Property="Height" Value="500"/>
                                        <Setter Property="Margin" Value="40,160 ,180,130"/>
                                        <!-- Увеличили отступ сверху -->
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding SelectedLockerName}" Value="С лампой">
                                        <Setter Property="Height" Value="558"/>
                                        <Setter Property="Margin" Value="71,60,152,138"/>
                                    </DataTrigger>

                                    <!-- Триггер для эффекта при наведении -->
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Effect">
                                            <Setter.Value>
                                                <DropShadowEffect BlurRadius="20" 
                                                Color="White"
                                                Opacity="0.7"/>
                                            </Setter.Value>
                                        </Setter>

                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Image.Style>
                    </Image>
                </Button>
            </Grid>
            <!-- Тень кота -->
            <!-- Тень кота -->
            <Ellipse x:Name="CatShadow"
         Width="200" 
         Height="50"
         HorizontalAlignment="Center"
         VerticalAlignment="Top"
         Margin="0,-470,0,0"
         Opacity="0.3">
                <Ellipse.Fill>
                    <RadialGradientBrush>
                        <GradientStop Color="#80000000" Offset="0"/>
                        <GradientStop Color="#00000000" Offset="1"/>
                    </RadialGradientBrush>
                </Ellipse.Fill>
                <Ellipse.Effect>
                    <BlurEffect Radius="15"/>
                </Ellipse.Effect>
                <Ellipse.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform x:Name="ShadowScale"/>
                        <TranslateTransform x:Name="ShadowTranslate" Y="0"/>
                    </TransformGroup>
                </Ellipse.RenderTransform>
                <Ellipse.Triggers>
                    <EventTrigger RoutedEvent="Loaded">
                        <BeginStoryboard>
                            <Storyboard RepeatBehavior="Forever">
                                <!-- Анимация размера тени -->
                                <DoubleAnimation
                        Storyboard.TargetName="ShadowScale"
                        Storyboard.TargetProperty="ScaleX"
                        From="0.8" To="1.2"
                        Duration="0:0:3"
                        AutoReverse="True"
                        EasingFunction="{StaticResource SineEaseInOut}"/>

                                <!-- Анимация прозрачности тени -->
                                <DoubleAnimation
                        Storyboard.TargetName="CatShadow"
                        Storyboard.TargetProperty="Opacity"
                        From="0.4" To="0.2"
                        Duration="0:0:3"
                        AutoReverse="True"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Ellipse.Triggers>
            </Ellipse>

            <!-- Сам кот -->
            <!-- Сам кот -->
            <!-- Сам кот -->
            <Image Source="{Binding CurrentCatImage}" 
       HorizontalAlignment="Center"
       VerticalAlignment="Top"
       Width="650" 
       Height="650"
       Stretch="Uniform" 
       Margin="0,-542,0,0">
                <Image.RenderTransform>
                    <ScaleTransform x:Name="CatScale" ScaleX="1" ScaleY="1"/>
                </Image.RenderTransform>
                <Image.Triggers>
                    <EventTrigger RoutedEvent="Loaded">
                        <BeginStoryboard>
                            <Storyboard RepeatBehavior="Forever">
                                <!-- Анимация сжатия и растяжения кота -->
                                <DoubleAnimation
                        Storyboard.TargetName="CatScale"
                        Storyboard.TargetProperty="ScaleX"
                        From="1" To="1.05"
                        Duration="0:0:3"
                        AutoReverse="True"
                        EasingFunction="{StaticResource SineEaseInOut}"/>
                                <DoubleAnimation
                        Storyboard.TargetName="CatScale"
                        Storyboard.TargetProperty="ScaleY"
                        From="1" To="0.95"
                        Duration="0:0:3"
                        AutoReverse="True"
                        EasingFunction="{StaticResource SineEaseInOut}"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Image.Triggers>
            </Image>
        </Grid>
    </Grid>
</UserControl>