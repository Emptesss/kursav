<UserControl x:Class="CatGame.Views.MainGameScreenView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CatGame.Views"
             mc:Ignorable="d"
             d:DesignHeight="1080" 
             d:DesignWidth="1980">
    <UserControl.Background>
        <ImageBrush ImageSource="/Views/fonmenu.png" Stretch="UniformToFill"/>
    </UserControl.Background>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="0*"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Top Balance Panel -->
        <Grid Grid.Row="0" Margin="20,20,20,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Image Source="/Views/монета.png" 
                   Width="100" 
                   Height="100"
                   Grid.Column="0"/>

            <TextBlock Text="{Binding Balance, StringFormat='Баланс: {0}'}" 
                       FontSize="24" 
                       Margin="10 0 0 0"
                       VerticalAlignment="Center"
                       Grid.Column="1"/>

            <Button Command="{Binding ExitCommand}" 
                    Grid.Column="2"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Margin="0,0,20,0"
                    Style="{StaticResource InvisibleButtonStyle}">
                <Image Source="/Views/кнопкавыход.png"
                       Width="100"
                       Height="100"/>
            </Button>
        </Grid>

        <!-- Main Content -->
        <Grid Grid.Row="1" Grid.RowSpan="2"/>

        <!-- Bottom Navigation (оставлено без изменений) -->
        <Grid Grid.Row="3" Background="#FFE9A5B5" Height="150">
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"/>
            <Button Command="{Binding OpenMiniGamesMenuCommand}" 
                    Margin="-222,-646,1130,42"
                    Style="{StaticResource InvisibleButtonStyle}">
                <Image Source="/Views/игры.png" 
                       RenderTransformOrigin="0.5,0.5"
                       Stretch="Uniform"
                       Opacity="1">
                    <Image.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform ScaleX="-1"/>
                            <SkewTransform/>
                            <RotateTransform/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </Image.RenderTransform>
                    <Image.Style>
                        <Style TargetType="Image">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Effect">
                                        <Setter.Value>
                                            <DropShadowEffect BlurRadius="20" 
                                                             Color="White"
                                                             Opacity="0.7"/>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                                    <Setter Property="RenderTransform">
                                        <Setter.Value>
                                            <ScaleTransform ScaleX="1.05" ScaleY="1.05"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Image.Style>
                </Image>
            </Button>
            <Button Command="{Binding NavigateToShopCommand}" 
                    Margin="1447,-568,10,75"
                    Style="{StaticResource InvisibleButtonStyle}">
                <Image Source="/Views/шкафчик.png" 
                       Stretch="Fill"
                       RenderTransformOrigin="0.5,0.5" 
                       Margin="10,0,0,0">
                    <Image.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </Image.RenderTransform>
                    <Image.Style>
                        <Style TargetType="Image">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Effect">
                                        <Setter.Value>
                                            <DropShadowEffect BlurRadius="20" 
                                                             Color="White"
                                                             Opacity="0.7"/>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="RenderTransform">
                                        <Setter.Value>
                                            <ScaleTransform ScaleX="1.05" ScaleY="1.05"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Image.Style>
                </Image>
            </Button>
            <Image Source="/CatGame;component/Views/котправо.png" 
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   Width="650" 
                   Height="650"
                   Stretch="Uniform" 
                   Margin="0,-542,0,0"/>
        </Grid>
    </Grid>
</UserControl>